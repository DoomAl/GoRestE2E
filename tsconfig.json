{
  "exclude": ["node_modules", "tmp", "dist", ".build"],
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "outDir": ".build",
    "target": "ES2021",
    "lib": ["ES2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  }
}
